<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@drawable/shap_bg_listview"
    android:orientation="horizontal"
    android:padding="15dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:orientation="vertical">

        <TextView
            android:id="@+id/taskpack_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="系统通知"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/taskpack_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="这是一条默认消息"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/taskpack_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="开启 灯\n关闭 空调\n开启 窗帘"
            android:textColor="@color/gray" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/taskpack_delete_button"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:scaleType="fitCenter"
            android:src="@drawable/delete" />

        <ImageView
            android:id="@+id/taskpack_run_button"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:scaleType="fitCenter"
            android:src="@drawable/run" />

    </LinearLayout>


</LinearLayout>