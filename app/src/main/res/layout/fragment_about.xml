<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AboutFragment"
    android:background="@color/white"
    android:layout_margin="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <!--  项目说明部分  -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pojo_intro_title"
            android:textStyle="bold"
            android:textSize="30sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pojo_intro"
            android:textSize="17sp"
            android:layout_margin="5dp"/>

        <!--  项目功能部分  -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pojo_function_title"
            android:textStyle="bold"
            android:textSize="30sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pojo_function"
            android:textSize="17sp"
            android:layout_margin="5dp"/>

        <!--  项目成员介绍  -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pojo_member_title"
            android:textStyle="bold"
            android:textSize="30sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pojo_member"
            android:textSize="17sp"
            android:layout_margin="5dp"/>

        <ImageView
            android:id="@+id/debug_button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/debug"
            android:layout_marginTop="50dp"
            android:layout_gravity="bottom|right"/>

    </LinearLayout>


</FrameLayout>